<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Views.AyudaPage"
             Title="Ayuda">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="15">

            <Label
                Text="Ayuda y Soporte"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="{StaticResource Primary}" />

            <Label
                Text="&#191;Necesitas ayuda? Cont&#225;ctanos"
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="{StaticResource Gray500}"
                Margin="0,0,0,20" />

            <Label
                Text="Preguntas Frecuentes"
                FontSize="20"
                FontAttributes="Bold"
                Margin="0,10,0,10" />

            <Label
                Text="&#191;C&#243;mo registrar una compra?"
                FontSize="16"
                FontAttributes="Bold" />
            <Label
                Text="Ve a 'Gesti&#243;n de Compras' y completa los datos del art&#237;culo adquirido."
                FontSize="14"
                TextColor="{StaticResource Gray500}"
                Margin="0,0,0,15" />

            <Label
                Text="&#191;C&#243;mo realizar un abono?"
                FontSize="16"
                FontAttributes="Bold" />
            <Label
                Text="Selecciona 'Registro de Abonos' y elige la compra a la que deseas abonar."
                FontSize="14"
                TextColor="{StaticResource Gray500}"
                Margin="0,0,0,15" />

            <Label
                Text="&#191;C&#243;mo consultar mi historial?"
                FontSize="16"
                FontAttributes="Bold" />
            <Label
                Text="Ve a 'Consultas' para ver todas tus compras y abonos realizados."
                FontSize="14"
                TextColor="{StaticResource Gray500}"
                Margin="0,0,0,20" />

            <Label
                Text="Informaci&#243;n de Contacto"
                FontSize="20"
                FontAttributes="Bold"
                Margin="0,10,0,10" />

            <Label
                Text="Email:"
                FontSize="16"
                FontAttributes="Bold" />
            <Label
                Text="soporte@puravidayatchs.com"
                FontSize="14"
                TextColor="{StaticResource Gray500}"
                Margin="0,0,0,10" />

            <Label
                Text="Tel&#233;fono:"
                FontSize="16"
                FontAttributes="Bold" />
            <Label
                Text="+506 0000-0000"
                FontSize="14"
                TextColor="{StaticResource Gray500}"
                Margin="0,0,0,10" />

            <Label
                Text="Horario de Atenci&#243;n:"
                FontSize="16"
                FontAttributes="Bold" />
            <Label
                Text="Lunes a Viernes: 8:00 AM - 6:00 PM"
                FontSize="14"
                TextColor="{StaticResource Gray500}"
                Margin="0,0,0,20" />

            <Button
                Text="Volver al Men&#250;"
                Clicked="OnVolverClicked"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
